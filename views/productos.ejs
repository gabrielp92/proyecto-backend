<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proyecto Backend</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body class="bg-light">
    <div class="container">
        <main>
            <div class="row mt-5">
                <div class="col-md-7 col-lg-8">
                    <h2 class="mb-3 text-primary"><%= mensaje %></h2>

                    <% if(productos.length == 0) { %>
                        <h3 class="p-3 text-white bg-secondary">No se encontraron productos</h3>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="text-white bg-dark text-center">
                                <thead>
                                    <tr>
                                        <th class="p-2" scope="col">Nombre</th>
                                        <th class="p-2" scope="col">Precio</th>
                                        <th class="p-2" scope="col">Foto</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% productos.forEach(producto => { %>
                                        <tr class="border border-secondary">
                                            <td class="p-4"><%= producto.title %></td>
                                            <td class="p-4"><%= producto.price %></td>
                                            <td class="p-4">
                                                <img src="<%= producto.thumbnail %>" alt="foto">
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                    <div class="d-flex mt-3 flex-column align-items-start">
                        <button class="w-50 btn btn-success btn-md" type="button" onclick="location.href='/'">Cargar Productos</button>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>