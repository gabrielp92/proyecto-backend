<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proyecto Backend</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <main>
            <div class="row mt-3 mb-5">
                <div class="col-md-7 col-lg-8 bg-light pt-4 pb-4">

                    <h2 class="mb-3 text-primary">Ingrese Producto</h2>
                    <form action="/productos" method="post">
                        <div class="col-12">
                            <label for="titulo" class="form-label fw-bold"><i>Nombre</i></label>
                            <input type="text" name="title" class="form-control" id="titulo" placeholder="Escriba aquí el nombre del producto">
                            <div class="invalid-feedback">
                              Por favor, ingrese el nombre del producto
                            </div>
                        </div>
                        <div class="col-12 mt-2">
                            <label for="precio" class="form-label fw-bold"><i>Precio</i></label>
                            <input type="number" name="price" class="form-control" id="precio" placeholder="Escriba aquí el precio del producto">
                            <div class="invalid-feedback">
                              Por favor, ingrese el precio del producto
                            </div>
                        </div>
                        <div class="col-12 mt-2">
                            <label for="foto" class="form-label fw-bold"><i>Foto URL</i></label>
                            <input type="text" name="thumbnail" class="form-control" id="foto" placeholder="Escriba aquí la URL de la foto del producto">
                            <div class="invalid-feedback">
                              Por favor, ingrese la URL de la foto del producto
                            </div>
                        </div>
                        <hr class="my-4">
                        <div class="d-flex flex-column align-items-center">
                            <input class="w-50 btn btn-success btn-md" type="submit" value="Enviar"> 
                        </div>
                    </form>

                    <!-- tabla de productos-->
                    <h2 class="mt-5 mb-3 text-primary"><%= tituloTabla %></h2>

                    <% if(productos.length == 0) { %>
                        <h3 class="p-3 text-danger">No se encontraron productos</h3>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="text-white bg-dark text-center">
                                <thead>
                                    <tr>
                                        <th class="p-2" scope="col">Nombre</th>
                                        <th class="p-2" scope="col">Precio</th>
                                        <th class="p-2" scope="col">Foto</th>
                                    </tr>
                                </thead>
                                <tbody id="body-tabla">
                                    <% productos.forEach(producto => { %>
                                        <tr class="border border-secondary">
                                            <td class="p-4"><%= producto.data.title %></td>
                                            <td class="p-4"><%= producto.data.price %></td>
                                            <td class="p-4">
                                                <img src="<%= producto.data.thumbnail %>" alt="foto">
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                    <!-- fin tabla de productos -->
                </div>

                <div class="col-md-7 col-lg-8 mt-4 bg-light pt-4 pb-4">
                    <h2 class="mb-3 text-primary mt-3">Centro de Mensajes</h2>
                    <form class="needs-validation" novalidate>
                        <div class="input-group has-validation w-50">
                            <input type="text" id="username" class="w-50 form-control" placeholder="tumail@gmail.com" aria-describedby="inputGroupPrepend" required>
                            <div class="invalid-feedback">
                                Por favor, ingrese su mail.    
                            </div>
                        </div>
                        <hr>  
                        <div id="chat" class="col-12 mt-1"></div>
                        <div class="mt-2 d-flex flex-row gap-3">       
                            <input type="text" id="msn" name="msn" class="w-75 form-control" placeholder="Ingrese un mensaje">
                            <button type="submit" id="send" class="btn btn-primary">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="../public/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>